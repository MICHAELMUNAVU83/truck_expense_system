<div>
  <h2><%= @title %></h2>

  <.form
    let={f}
    for={@changeset}
    id="truck-form"
    phx-target={@myself}
    phx-change="validate"
    phx-submit="save">
  
    <%= label f, :registration_number %>
    <%= text_input f, :registration_number %>
    <%= error_tag f, :registration_number %>
  
    <%= label f, :image %>
    <%= text_input f, :image %>
    <%= error_tag f, :image %>
  
    <%= label f, :description %>
    <%= text_input f, :description %>
    <%= error_tag f, :description %>
  
    <div>
      <%= submit "Save", phx_disable_with: "Saving..." %>
    </div>
  </.form>
</div>
